nextflow_pipeline {

    name "Test Pipeline for plate-based datasets"
    script "main.nf"
    config "tests/nextflow.config"

    test("Should run without failures") {

        when {
            params {
                technology = "plate"
                dir_path = "/home/runner/work/scxa-tertiary-workflow/scxa-tertiary-workflow/test-data/test-plate"
                output_path = "test-data/test-plate-out"
                celltype_field = "authors_cell_type_-_ontology_labels"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 2
        }
    }
}

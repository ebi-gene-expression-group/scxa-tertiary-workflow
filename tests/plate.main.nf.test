nextflow_pipeline {

    name "Test Workflow main.nf - plate"
    script "main.nf"
    config "./nextflow.config"

    test("Test plate dataset") {

        when {
            // the rest is shared config
            params {
                technology = "plate"
                dir_path = "test-data/test-plate"
                output_path = null
                result_dir_path = "${params.output_path ?: params.dir_path + '/results_plate'}"
            }
        }

        then {

            trace {
                enabled = true
                file = "${params.result_dir_path}/trace.txt"
                overwrite = true
            }

            timeline {
                enabled = true
                file = "${params.result_dir_path}/timeline.html"
                overwrite = true
            }

            report {
                enabled = true
                file = "${params.result_dir_path}/report.html"
                overwrite = true
            }

            assert workflow.success
            assert workflow.trace.tasks().size() == 2

        }
    }

}

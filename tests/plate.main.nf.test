nextflow_pipeline {

    name "Test Workflow main.nf - plate"
    script "main.nf"
    config "tests/nextflow.config"

    test("Test plate dataset") {

        when {
            // the rest is shared config
            params {
                technology = "plate"
                dir_path = "test-data/test-plate"
                output_path = null
                result_dir_path = "${params.output_path ?: params.dir_path + '/results_plate'}"
            }
        }

        then {

            assert workflow.success
            assert workflow.trace.tasks().size() == 2

        }
    }

}

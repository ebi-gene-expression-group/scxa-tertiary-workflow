nextflow_pipeline {

    name "Test Workflow main.nf - plate"
    script "main.nf"

    test("test_dataset_plate") {

        when {
            // the rest is shared config
            params {
                technology = "plate"
            }
        }

        then {

            params{
                dir_path = "test-data/test-plate"
                output_path = null
                result_dir_path = "${params.output_path ?: params.dir_path + '/results_plate'}"
            }

            trace {
                enabled = true
                file = "${params.result_dir_path}/trace.txt"
                overwrite = true
            }

            timeline {
                enabled = true
                file = "${params.result_dir_path}/timeline.html"
                overwrite = true
            }

            report {
                enabled = true
                file = "${params.result_dir_path}/report.html"
                overwrite = true
            }

            assertAll(

                //
                // General assertions
                //

                // Did it finish successfully?
                {assert workflow.success},

                ).match()}

            ) // end of assertAll()

        }
    }

}
